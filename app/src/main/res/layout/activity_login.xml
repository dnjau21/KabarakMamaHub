<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_white_1000">

        <TextView
            android:id="@+id/textIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textIntroOtp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="367dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Please enter your National ID number \nto activate your account"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textIntroOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="101dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="128dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="You will receive a One time Code "
            android:textColor="@color/grey_600"
            android:textSize="14dp" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneConfirm"
            android:layout_width="310dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/input_field"
            android:cursorVisible="true"
            android:gravity="center"
            android:hint="Enter ID number"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textColorHint="@color/blue_grey_400" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phoneConfirm"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/poppins_medium"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="@style/MyDialog"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:indeterminateDrawable="@drawable/progressbarpurple_circle"
            android:indeterminateDuration="500"
            android:indeterminateOnly="true"
            android:progressTintMode="src_atop"
            android:visibility="gone"

            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="206dp"
            android:layout_height="126dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="105dp"
            app:srcCompat="@drawable/ic_onboarding_watch" />
    </RelativeLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>